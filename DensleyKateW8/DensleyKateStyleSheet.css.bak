body {
background-color: ghostwhite;
}

h1, h2, h3, h4, h5 {
color: steelblue;
text-align: center;
font-family: "Monaco", Monaco, monospace;
font-size: 24px;
}

p, table, form, button, div {
    font-family: "Monaco", Monaco, monospace;
    font-size: 16px;
	text-align: center;
}

ul {
    font-family: "Monaco", Monaco, monospace;
    font-size: 16px;
	text-align: center;
	list-style-type:none
}
img, video, audio, button {
	display:block;
	margin-left: auto;
	margin-right: auto;
}
span.boldtext {
    font-weight: bold;
}

span.italictext {
    font-style: italic;
}

nav {
    height: 75px;
    width: 100%;
    background-color: AliceBlue;
    position: relative;
  }
 
 
#menu{
    width: 100%;
    height: 100%;
}
     
#menu ul{
    text-align: center;
    background: LightBlue;
}
     
#menu li{
    display: inline-block;
}
     
#menu li a, #menu li span{
    display: inline-block;
    padding: 0em 1.5em;
    text-decoration: none;
	font-family: "Monaco", Monaco, monospace;
	font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    line-height: 60px;
}
     
#menu li a{
         
    color: #FFF;
}
     
#menu li:hover a, #menu li span{
    background: #FFF;
    color: #0074D9;
    border-left: 1px solid #0074D9;
    text-decoration: none;
}

table {
	width: 80%;
	background-color: powderblue;
	border-collapse: collapse;	
	margin-left: auto;
	margin-right: auto;
}

table, th, td {
	border-width: 2px;
	border-style: ridge;
	border-color: snow;
}

th, td {
	padding: 10px;
	text-align: center;
	vertical-align: center;	
}

