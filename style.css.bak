	text-decoration: none;
	color: black;
}
ul, li {
	list-style-position: inside;
	list-style-type: "ü§ç";
	padding-left: 100px;
	color: chocolate;
	font-size: 25px;
}

/* classes */
.center {
    display:block;
    margin-left: auto;
    margin-right: auto;
    width: 50%;

}

/* button effect */
.button {
    padding: 15px;
    border: 3px solid brown;
    background-color: pink;
    color: black;
	font-size: 20px;
}

.button:hover {
    background-color: white;
    color: black;
}

/* typewrite effect */
.typewriter h2 {
	overflow: hidden;
	border-right: 0.15em solid black;
	white-space: nowrap;
	margin: 0 auto;
	letter-spacing: .15em;
	animation:
		typings 3.5s steps(40, end),
		blink-caret 0.75s step-end;
}
@keyframes typings {
	from { width:0 }
	to {width: 100% }
}
/* cursor */
@keyframes blink-caret {
	from, to { border-color: transparent }
	50% { border-color: black; }
}

/* navigation menu */
.menu {
	overflow: hidden;
	position: fixed;
	bottom: 0;
	right: 0;
	
}

.menu a{
	float: right;
	display: block;
	color: brown;
	text-decoration: none;
	font-size: 20px;
	padding: 0px 10px;
}
.menu a:hover{
	color: black;
}

@media only screen and (max-width: 600px) {
    .menu {
    /*Your styles on small screen - example only*/
     display:block;
     position:relative;
    }
}


